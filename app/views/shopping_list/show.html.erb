<div class ="container">
<h1 class="text-center">Shopping List </h1>

<div class="d-flex flex-row justify-content-evenly mb-5">
  <h3>Amount of food items to buy: <%= @recipe_food.length %> </h3>
  <h3>Total price: <%= @total_price %></h3>
</div>

<div class="shadow mb-5 bg-body rounded">
<table class="table table-striped table-bordered">
    <thead>
        <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
        </tr>
    </thead>

    <tbody>
    <% @recipe_food.each do |food|%>
    <tr>
      <td><%= food.food.name%></th>
      <td><%= food.quantity%><%= food.food.measurementUnit  %></td>
      <td><%= food.quantity * food.food.price %></td>
    </tr>
  
    </tbody>
    </div>
    <% end %>
</table>
</div>